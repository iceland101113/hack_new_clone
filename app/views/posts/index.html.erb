<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Small Items</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Big Items</button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <br>
    <%#= link_to '+', new_admin_photos_small_item_path, :class=>"btn btn-default"%>
    <br>
    <br>
    <table class="table table-bordered table-striped table-condensed">
      <thead>
        <tr>
          <th>Title</th>
          <th>Point</th>
          <th>Author</th>
          <th>Count</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%#= item.description %></td>
            <td><%= post.user.email %></td>
            <td><%= post.comments_count %></td>
            <td><%= post.votes_count %></td>
            <td>
                <% if post.user == current_user %>
                  <%= link_to edit_post_path(post) do %>
                    <i class="bi bi-pencil-fill" style="font-size: 2rem; color: cornflowerblue;"></i>
                  <% end %>
                  <%= link_to post_path(post), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %> 
                    <i class="bi bi-trash-fill" style="font-size: 2rem; color: cornflowerblue;"></i>
                  <% end %> 
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @posts %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <!-- <div>haha</div> -->
  </div>
</div>
